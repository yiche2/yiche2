<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.appyiche.fragment.MySelfFragment"
    >
    <!-- TODO: 未完成 -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button1"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/selector_button_my_self_weixin" />
        <Button
        android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/selector_button_my_self_weibo" />
        <Button
        android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/selector_button_my_self_qq" />
        <Button
        android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/selector_button_my_self_yiche" />
    </LinearLayout>

    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout"
        android:layout_marginTop="105dp">
        <LinearLayout style="@style/single_layout">
            <TextView style="@style/usertext"
                android:text="添加爱车" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
    </LinearLayout>


    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout"
        android:layout_marginTop="170dp">
        <LinearLayout style="@style/single_layout">
            <TextView style="@style/usertext"
                android:text="消息" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
    </LinearLayout>







    <LinearLayout style="@style/wrap_layout"
        android:layout_marginTop="240dp">
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="易车优惠卷" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="每日任务" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="车币商城" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="收藏夹" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>


        <View style="@style/bg_line"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="申请认证" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>


    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout"
        android:layout_marginTop="510dp">
        <LinearLayout style="@style/single_layout">
            <TextView style="@style/usertext"
                android:text="活动广场" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
